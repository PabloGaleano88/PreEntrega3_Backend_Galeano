<div id="contenido">
    <div class="user_data">
        <div class="user_logged_left">
            <span>Bienvenid@! {{first_name}} {{last_name}} ({{age}})
        </div>
        <div class="user_logged_right">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                <span>
                    {{email}} |
                    {{#if admin}}
                    Administrador
                    {{else}}
                    Usuario
                    {{/if}} |
                    <a href="http://localhost:8080/api/logout">Cerrar Sesi√≥n </a>
                </span>
            </svg>
        </div>
    </div>
    <div class="go_to_cart">
        <a href="http://localhost:8080/carts/{{cartId}}"><button type="button" class="btn btn-warning">Ir
                a mi carrito</button></a>
    </div>
    {{#each products}}
    <div class="card" style="width: 18rem;">
        <div class="image-container">
            <img src="/static/thumbnails/{{this.thumbnail}}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            {{this.category}}
            <h6>U$D: {{this.price}}</h6>
            <p class="card-text">{{this.description}}</p>
        </div>
        <div class="purchase_botton">
            <button type="button" class="btn btn-warning" id="purchase" data-productid="{{this._id}}" data-cartid="{{../cartId}}">Add to Cart +</button>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Stock: {{this.stock}} - Status: {{this.status}} </li>
            <li class="list-group-item">Code: {{this.code}}</li>
            <li class="list-group-item">ID: {{this._id}}</li>
        </ul>
    </div>
    {{/each}}
</div>
<footer>
    <div class="nav_buttons">
        {{#if prevLink}}
        <a href="{{prevLink}}"><button type="button" class="btn btn-warning">Pagina Anterior</button></a>
        {{/if}}
        {{#if nextLink}}
        <a href="{{nextLink}}"><button type="button" class="btn btn-warning">Pagina Siguiente</button></a>
        {{/if}}
    </div>
</footer>
<script>
    const userData = {
        first_name: "{{first_name}}",
        last_name: "{{last_name}}",
        email: "{{email}}",
        age: "{{age}}"
    }
</script>
